<div class = "text-center">
<%= form_for @album, url: albums_path do |f| %>
  <% if @album.errors.present? %>
    <ul>
          <% @album.errors.each do |error, message| %>
            <li> <%= "#{error.capitalize}  #{message}" %></li>
          <% end %>
    </ul>
  <% end %>

<h2>Create New Album</h2>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <p>Category
  <%= f.collection_select :category_id, Category.all, :id, :name, :include_blank => "Please select" %>
  </p>

  <p>Tags:<br>
   <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %>

  </p> 

  <%= f.submit %>
<% end %>
</div>
